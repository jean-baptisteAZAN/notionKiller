{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "types": ["bun-types"],
    "declaration": true,  // Important pour générer les .d.ts
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["types"],
  "exclude": ["node_modules", "dist"]
}
